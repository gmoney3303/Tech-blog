<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - Tech Blog</title>
  <!-- Stylesheets or other meta tags -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header>
        <!-- Your header content here -->
        <nav>
            <ul>
                <a href="/">Home</a>
                <a href="/dashboard">Dashboard</a>
                <a href="/login">Login</a>
                <!-- Add other navigation links based on requirements -->
            </ul>
        </nav>
    </header>
  <h1>Welcome, {{ name }}!</h1>
  
  <!-- Display user information -->
{{#if user.posts.length}}
  <div class="col-md-6 project-list">
    <h3>Current Posts:</h3>

    {{#each user.posts as |post|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a href="/posts/{{post.id}}">{{post.title}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger deleteBtn" data-id="{{post.id}}">DELETE</button>
        </div>
      </div>
    {{/each}}
  </div>
{{/if}}
</div>
  
  <!-- Form for creating a new post -->
  <form id="newPostForm">
    <div>
      <label for="postTitle">Title:</label>
      <input type="text" id="postTitle" name="postTitle">
    </div>
    <div>
      <label for="postContent">Content:</label>
      <textarea id="postContent" name="postContent"></textarea>
    </div>
    <button type="submit">Create Post</button>
  </form>
  
  <!-- Script for profile functionality -->
  <script src="/js/profile.js"></script>
</body>
</html>
